<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:baselineAligned="false"
    android:layout_marginBottom="5dip"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:id="@+id/menu_item_setting"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            style="@style/MenuItemImageViewStyle"
            android:background="@drawable/drawer_menu_icon_setting_nor"
            android:layout_width="24dip"
            android:layout_height="24dip"/>

        <TextView
            style="@style/MenuItemTextViewStyle"
            android:textSize="14sp"
            android:text="设置" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/menu_item_theme"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            style="@style/MenuItemImageViewStyle"
            android:background="@drawable/drawer_menu_icon_night_nor"
            android:layout_width="24dip"
            android:layout_height="24dip"
            />

        <TextView
            style="@style/MenuItemTextViewStyle"
            android:id="@+id/tv_night"
            android:textSize="14dip"
            android:text="夜间" />
    </LinearLayout>

</LinearLayout>